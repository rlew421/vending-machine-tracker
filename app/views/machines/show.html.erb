<h1><%= @machine.location %> Vending Machine</h1>

<% @machine.snacks.each do |snack| %>
  <section id= 'snack-<%=snack.id%>'>
    <p><%= snack.name %></p>
    <p>Price: <%= number_to_currency(snack.price) %></p>
  </section>
<% end %>

<p>Average Price: <%= number_to_currency(@machine.average_price) %></p>
